<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

    <select id="selectByEmail" resultType="com.springstudy.domain.UserVO">
        <![CDATA[
          SELECT
              EMAIL,
              NAME
          FROM
              USER
          WHERE
              EMAIL = #{email}       
      ]]>
    </select>
    
    <select id="selectById" resultType="com.springstudy.domain.UserVO">
        <![CDATA[
          SELECT
              ID,
              NAME
          FROM
              USER
          WHERE
              ID = #{id}       
      ]]>
    </select>
    
    <insert id="register">
        <![CDATA[
            INSERT INTO USER
            (
                EMAIL,
                ID,
                NAME,
                PASSWORD,
                REGDATE
            )
            VALUES
            (
                #{email},
                #{id},
                #{name},
                #{password},
                SYSDATE()
            )
        ]]>
    </insert>
 
</mapper>
